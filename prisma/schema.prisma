generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model Tweet {
    id String @id @default(uuid())
    author Author @relation(fields: [username], references: [username])
    tweet String
    time DateTime
    source String
    permalink String?
    username String 
}

model Author {
    name String
    username String @id
    image String
    tweets Tweet[]
}