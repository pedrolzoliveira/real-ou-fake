generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model Tweet {
    id String @id @default(uuid())
    author Author @relation(fields: [authorId], references: [id])
    tweet String
    time DateTime
    source String
    permalink String?
    authorId String 
}

model Author {
    id String @id @default(uuid())
    name String
    username String
    image String
    tweets Tweet[]
}